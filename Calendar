# Description of Program: This program will print the calendar for any month in 
# 2025. The user will be prompted to enter a month number between 1 and 12, or 0 to 
# stop the program. The program will then print the calendar for the month entered. 
# The program will continue to prompt the user for a month number until the user 
# enters 0 to stop the program.

# Constants for days of the week
SUN = 0
MON = 1
TUE = 2
WED = 3
THU = 4
FRI = 5
SAT = 6

# Constants for months
JAN = 1
FEB = 2
MAR = 3
APR = 4
MAY = 5
JUN = 6
JUL = 7
AUG = 8
SEP = 9
OCT = 10
NOV = 11
DEC = 12

def monthName(n):
    """Given the number of a month, return its name."""
    if n == JAN:
        return "January"
    elif n == FEB:
        return "February"
    elif n == MAR:
        return "March"
    elif n == APR:
        return "April"
    elif n == MAY:
        return "May"
    elif n == JUN:
        return "June"
    elif n == JUL:
        return "July"
    elif n == AUG:
        return "August"
    elif n == SEP:
        return "September"
    elif n == OCT:
        return "October"
    elif n == NOV:
        return "November"
    elif n == DEC:
        return "December"

def firstDayOfMonth(n):
    """Given a month in 2025, return the starting day (0=Sunday, ..., 6=Saturday)."""
    if n == JAN:
        return WED
    elif n == FEB:
        return SAT
    elif n == MAR:
        return SAT
    elif n == APR:
        return TUE
    elif n == MAY:
        return THU
    elif n == JUN:
        return SUN
    elif n == JUL:
        return TUE
    elif n == AUG:
        return FRI
    elif n == SEP:
        return MON
    elif n == OCT:
        return WED
    elif n == NOV:
        return SAT
    elif n == DEC:
        return MON

def daysInMonth2025(n):
    """Given a month in 2025, return the number of days in it."""
    if n == FEB:
        return 28
    elif n == APR or n == JUN or n == SEP or n == NOV:
        return 30
    else:
        return 31

def printCalendarMonth(n):
    """Print the calendar for month n in 2025."""
    print()
    title = monthName(n) + ", 2025"
    print(title.center(20))
    print("Su Mo Tu We Th Fr Sa")
    
    first_day = firstDayOfMonth(n)
    days = daysInMonth2025(n)
    
    # Print initial spacing
    print("   " * first_day, end="")
    
    # Print each day in the month
    column = first_day
    for day in range(1, days + 1):
        print(format(day, "2d"), end=" ")
        column += 1
        if column == 7:
            print()
            column = 0
    if column != 0:
        print()
    print()

def main():
    """Main loop to prompt user for month input and display calendar."""
    print("\nWelcome to our calendar utility!\nPrint the calendar for any month in 2025.\n")
    while True:
        month_input = input("Enter a month [1..12] or 0 to stop: ")
        if month_input.isdigit():
            month = int(month_input)
            if month == 0:
                print("Thanks for visiting! Goodbye!\n")
                break
            elif 1 <= month <= 12:
                printCalendarMonth(month)
            else:
                print("Month must be a number between 1 and 12, or 0 to stop. Try again.\n")
        else:
            print("Month must be a number between 1 and 12, or 0 to stop. Try again.\n")

if __name__ == "__main__":
    main()